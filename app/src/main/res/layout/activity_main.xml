<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.Speech_To_Text_Recognition.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F8FA"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:srcCompat="@mipmap/ic_launcher_foreground"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textXML"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:gravity="center"
        android:hint="Users Input Here"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/languageXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textXML"
        android:layout_centerVertical="true"
        android:layout_marginTop="-21dp"
        android:gravity="center"
        android:hint="Language"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:cropToPadding="true" />

</RelativeLayout>